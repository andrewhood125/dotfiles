google() {
  # IFS is a special var which sets the delimeter
  # in conjunction with $*
  # http://tldp.org/LDP/abs/html/internalvariables.html#IFSREF
  IFS="+"
  open "https://google.com/search?q=$*"
}

vimrc() {
  vim ~/.vimrc
}

zshrc() {
  vim ~/.zshrc
  reload
}

sugar() {
  vim ~/.sugar
  reload
}

reload() {
  source ~/.zshrc
}

nukeit() {
  make clean && \
  sbt update && \
  make compile && \
  make css
}

watch() {
  SLEEP=$1
  shift
  while true; do
    echo -e "\n"
    date
    echo -e "\n"
    "$@"
    sleep $SLEEP;
  done
}

salmon() {
  git pull upstream $@
}
